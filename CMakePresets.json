{
	"version": 3,
	"configurePresets": [
		{
			"name": "Ninja",
			"generator": "Ninja Multi-Config",
			"toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
			"binaryDir": "out/ninja",
			"installDir": "out/ninja/dist",
			"cacheVariables": {
				"CMAKE_C_STANDARD": "23",
				"CMAKE_C_STANDARD_REQUIRED": "ON",
				"CMAKE_C_EXTENSIONS": "OFF",

				"CMAKE_C_COMPILER": "clang",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",

				"CMAKE_C_FLAGS": "-Wall -Wextra -Wpedantic -Wshadow -Wunused -Wformat=2 -Wundef -Wmissing-prototypes -Wstrict-prototypes",
        		"CMAKE_C_FLAGS_DEBUG": "-g -O0 -fno-omit-frame-pointer",
        		"CMAKE_C_FLAGS_RELEASE": "-O3 -DNDEBUG",
        		"CMAKE_C_FLAGS_RELWITHDEBINFO": "-g -O2 -DNDEBUG"
			}
		}
	],

	"buildPresets": [
		{
			"name": "Ninja-Debug",
			"configurePreset": "Ninja",
			"configuration": "Debug"
		},

		{
			"name": "Ninja-Release",
			"configurePreset": "Ninja",
			"configuration": "Release"
		}
	]
}